---
const { events } = Astro.props
---

<a class="group flex flex-col gap-4 transition-all hover:scale-[1.005]" href="/">
	<img class="aspect-video w-full bg-neutral-200" src={`/events/${events.img}`} alt={events.name} />
	<div class="grid gap-1">
		<h3 class="text-xl font-medium underline-offset-2 group-hover:underline">
			{events.name}
		</h3>
		<div>
			{events.location} | {events.date} October '23
		</div>
	</div>
</a>
